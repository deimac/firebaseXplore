{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./_core",
    "baseUrl": "../../",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["./_core/**/*.ts"],
  "exclude": ["node_modules"]
}